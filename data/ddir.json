{
    "DDIR": {
        "mission": "Configurar un robot explorador eficiente y resistente.",
        "variables": {
            "battery_large_count": { "unit": "qty", "min": 0, "max": 2 },
            "battery_small_count": { "unit": "qty", "min": 0, "max": 2 },
            "sensors_pct": { "unit": "%", "min": 0, "max": 100 },
            "pattern": { "unit": "mode" },
            "terrain": { "unit": "type" }
        },
        "rules": [
            {
                "conditions": {
                    "sensors_pct": { "min": 100, "max": 100 },
                    "battery_large_count": { "min": 2 }
                },
                "success": false,
                "result": "Fallo: sensores al 100% con dos baterías grandes sobrecalientan el robot; se apaga."
            },
            {
                "conditions": {
                    "battery_large_count": { "min": 1, "max": 1 },
                    "battery_small_count": { "min": 1, "max": 1 },
                    "sensors_pct": { "min": 40, "max": 60 },
                    "pattern": "zigzag",
                    "terrain": "soft"
                },
                "success": true,
                "result": "Éxito: buena cobertura del terreno y consumo energético estable."
            },
            {
                "conditions": {
                    "battery_large_count": { "min": 0, "max": 1 },
                    "battery_small_count": { "min": 0, "max": 1 },
                    "sensors_pct": { "min": 45, "max": 60 },
                    "pattern": "zigzag",
                    "terrain": "rough"
                },
                "success": false,
                "result": "Parcial: el robot cubre bien el área, pero el terreno duro aumenta el consumo. Considera suavizar el terreno."
            },
            {
                "conditions": {},
                "success": false,
                "result": "Inconcluso: la configuración no logra una exploración efectiva."
            }
        ]
    }
}
